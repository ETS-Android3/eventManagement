<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/background_14"
    tools:context=".mainCourses">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_layout_title"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/go_back_starters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choose"
            android:layout_marginTop="20sp"
            android:background="@drawable/previous"/>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/main_courses"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/vegetarian_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_title"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/path_7"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Vegetarian foods>"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="italic" />


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_vegetarian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vegetarian_title"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:foregroundGravity="center_horizontal"
        app:selectionRequired="false"
        app:singleSelection="false">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip20"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Idly"
            android:textStyle="italic" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosa" />


        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fired Rice" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="North Indian Meals" />


        <com.google.android.material.chip.Chip
            android:id="@+id/chip4"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorth Indian Meals" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip5"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paneer Noodles" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip6"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veg Biriyani" />


    </com.google.android.material.chip.ChipGroup>


    <TextView
        android:id="@+id/non_vegetarian_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chip_group_vegetarian"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/path_7"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Non-Vegetarian foods>"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="italic" />


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_non_vegetarian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/non_vegetarian_title"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:foregroundGravity="center_horizontal"
        app:selectionRequired="false"
        app:singleSelection="false">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip10"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Kadai Chicken"
            android:textStyle="italic" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip11"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Butter Chicken Masala" />


        <com.google.android.material.chip.Chip
            android:id="@+id/chip12"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mutton Stew" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip13"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mutton pepper masala" />


        <com.google.android.material.chip.Chip
            android:id="@+id/chip14"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tandoori naan" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip15"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fish Fry" />


        <com.google.android.material.chip.Chip
            android:id="@+id/chip16"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken Dum Biriyani" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip17"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mutton Dum Biriyani" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip18"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken Noodles" />


    </com.google.android.material.chip.ChipGroup>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="50sp"
        android:background="@drawable/path_13"
        android:id="@+id/card_view_custom"
        android:layout_marginStart="20sp"
        android:layout_below="@id/chip_group_non_vegetarian"
        app:cardCornerRadius="30sp"
        android:layout_marginLeft="20sp">

        <EditText
            android:id="@+id/custom"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="Custom foods"
            android:layout_marginStart="20sp"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="@color/gray"
            android:textStyle="italic"
            android:layout_marginLeft="20sp" />

    </androidx.cardview.widget.CardView>


    <ImageButton
        android:id="@+id/choose_starters"
        android:layout_width="235sp"
        android:layout_height="74sp"
        android:layout_below="@id/card_view_custom"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="88dp"
        android:background="@drawable/choose"
        tools:ignore="SpeakableTextPresentCheck" />





</RelativeLayout>