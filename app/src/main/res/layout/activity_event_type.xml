<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/previous_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:src="@drawable/previous" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:layout_marginTop="2sp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/previous_button"
                android:background="@color/white"
                android:src="@drawable/text_choose" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26sp"
            android:layout_gravity="left"
            android:layout_marginStart="30sp"
            android:src="@drawable/celebrations" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@color/white"

            android:orientation="horizontal">

            <ImageButton

                android:id="@+id/birthday__"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F2F1FF"
                android:src="@drawable/birthday"
                android:contentDescription="Birthday" />

            <ImageButton
                android:id="@+id/marriage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F2F1FF"
                android:src="@drawable/marriage"
                android:contentDescription="Marriage" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/naming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="#F2F1FF"
            android:src="@drawable/naming" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/get_together"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F2F1FF"
                android:src="@drawable/get_together" />

            <ImageButton
                android:id="@+id/farewell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F2F1FF"

                android:src="@drawable/farewell" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/house_warming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="#F2F1FF"
            android:src="@drawable/house" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/tea_party"
                android:layout_width="wrap_content"
                android:background="#F2F1FF"
                android:layout_height="wrap_content"
                android:src="@drawable/tea_party" />

            <androidx.cardview.widget.CardView
                android:layout_width="150sp"
                android:layout_height="118sp"
                app:cardCornerRadius="20sp"
                android:layout_marginTop="8sp"
                android:outlineAmbientShadowColor="@color/gray"
                android:background="@color/white"
                android:id="@+id/custom_event_type">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Custom event type"
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:textSize="24sp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:id="@+id/input_custom_event"/>

                    <ImageView
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:src="@drawable/customization"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <!--
        <ImageButton
                android:id="@+id/fund_raising"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F2F1FF"
                android:src="@drawable/charity" />
        -->

    </LinearLayout>
</ScrollView>