<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/previous_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:src="@drawable/previous" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:layout_marginTop="2sp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/previous_button"
                android:background="@color/white"
                android:src="@drawable/text_choose" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26sp"
            android:layout_gravity="left"
            android:layout_marginStart="30sp"
            android:src="@drawable/celebrations" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/birthday__"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F2F1FF"
                android:src="@drawable/birthday" />

            <ImageButton
                android:id="@+id/marriage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F2F1FF"
                android:src="@drawable/marriage" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/naming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="#F2F1FF"
            android:src="@drawable/naming" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/get_together"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F2F1FF"
                android:src="@drawable/get_together" />

            <ImageButton
                android:id="@+id/farewell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F2F1FF"

                android:src="@drawable/farewell" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/house_warming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="#F2F1FF"
            android:src="@drawable/house" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/tea_party"
                android:layout_width="wrap_content"
                android:background="#F2F1FF"
                android:layout_height="wrap_content"
                android:src="@drawable/tea_party" />

            <ImageButton
                android:id="@+id/fund_raising"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F2F1FF"
                android:src="@drawable/charity" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>